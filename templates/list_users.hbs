<!DOCTYPE html>
<html>
<head>
    <title>Users</title>
</head>
<body>
    <h1>Users</h1>
    <p>Today's date and time: <span id="datetime">{{ now }}</span></p>
    <div>
        <form action="/users/new" method="get">
            <button id="new-user" type="submit">New User</button>
        </form>
    <table>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Occupation</th>
        </tr>
        {{#each user}}
        <tr>
            <td><a href="/users/{{ this.id }}">{{ this.id }}</a></td>
            <td>{{ this.first_name }}</td>
            <td>{{ this.last_name }}</td>
            <td>{{ this.occupation }}</td>
        </tr>
        {{/each}}
    </table>
</body>
</html>